@model IEnumerable<WebBanHang.Models.LoaiThanhVien>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    WebGrid grid = new WebGrid(source:Model);
}

@grid.GetHtml(
        tableStyle: "gridTable",
        headerStyle: "gridHead",
        footerStyle: "gridFooter",
        rowStyle: "gridRow",
        alternatingRowStyle: "gridAltRow",
        columns: grid.Columns(
        grid.Column("MaLoaiTV", header: "Mã loại thành viên"),
        grid.Column("TenLoai", header: "Tên loại"),
         //grid.Column("HinhAnh", "Mô tả", format: p => @Html.Raw("<img src=\"../Content/Pictures/" + p.HinhAnh+"\">"))
         grid.Column(format: p => @Html.ActionLink("Phân quyên", "PhanQuyen", new { id = p.MaLoaiTV }, new { @target = "_blank" }))
    ))

<style>
    .gridTable {
        border: 1px solid black;
        width: 100%;
    }

    .gridHead > th > a {
        color: #fff;
    }

    .gridHead {
        background-color: darkgrey;
    }

    .gridFooter {
        font-weight: bold;
        font-size: 15px;
        text-align: center;
    }

    .gridRow {
        border: 1px solid black;
        background-color: lightcyan;
    }

        .gridRow > tr, td {
            border: 1px solid black;
        }
</style>