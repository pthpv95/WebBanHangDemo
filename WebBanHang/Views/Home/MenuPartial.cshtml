@using WebBanHang.Models;
@model IEnumerable<SanPham>
<div class="h_menu4">
    <ul class="memenu skyblue">
        <li class="showhide" style="display: none;"><span class="icon1"></span></li>
        <li class="active grid" style="display: inline;"><a class="color8" href="@Url.Action("Index","Home")">Home</a></li>
        @foreach (var groupItem in Model.GroupBy(n => n.NhaSanXuat))
        {
            if (groupItem.Key != null)
            {
                <li style="display: inline;">
                    <a class="color1" href="#">@groupItem.Key.TenNSX</a>
                    <div class="mepanel">
                        <div class="row">
                            <div class="col1">
                                <div class="h_nav">
                                    <ul>
                                        @foreach (var item in groupItem.GroupBy(n => n.LoaiSanPham))
                                        {
                                            if (item.Key != null)
                                            {
                                                <li><a href="@Url.Action("SanPham","SanPham",new { @MaNSX = groupItem.Key.MaNSX,@MaLoaiSP = item.Key.MaLoaiSP})">@item.Key.TenLoai</a></li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            }
        }
    </ul>
</div>
