@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc

@using WebBanHang.Models
@model ThanhVien

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}

<div class="container" style="margin-top:-50px;">
    <div class="register">
        <h1>Register</h1>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <hr/>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-4 register-top-grid">
                <h3>Thong tin tai khoan </h3>
                <span style="color:darkblue">Tai khoan</span>
                <div>
                    @Html.TextBoxFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span style="color:darkblue">Ho ten</span>
                    @Html.TextBoxFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span style="color:darkblue">Dia chi</span>
                    @Html.TextBoxFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span style="color:darkblue">Email</span>
                    @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 register-bottom-grid">
                <h3>Thong tin dang nhap</h3>
                <div>
                    <span style="color:darkblue">Password</span>
                    @Html.TextBoxFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span style="color:darkblue">Confirm Password</span>
                   @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                   @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span style="color:darkblue">Cau hoi bi mat</span>
                    @Html.DropDownList("CauHoi")
                </div>
                <div>
                    <span style="color:darkblue">Tra loi</span>
                    @Html.TextBoxFor(model => model.CauTraLoi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CauTraLoi, "", new { @class = "text-danger" })
                </div>
               <div>@Html.MathCaptcha()</div>
                <input type="submit" value="Submit">
            </div>
        <div class="clearfix"> </div>
        }
    </div>
</div>
<h1 style="color:red">@ViewBag.ThongBao</h1>
